                                                                        <DropShadowEffect Color="#1E1E1E" Opacity="0.5" BlurRadius="5" ShadowDepth="2"/>
                                                                    </Border.Effect>
                                                                </Border>
                                                            </Grid>
                                                        </ControlTemplate>
                                                    </ToggleButton.Template>
                                                </ToggleButton>
