                            <!-- LUAC Output Directory -->
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="LUAC Output Directory:" Foreground="White" VerticalAlignment="Center" Width="160" Margin="0,0,5,0"/>
