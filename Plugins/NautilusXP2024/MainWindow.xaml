        <!-- Style for the ScrollBar itself -->
        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Track Name="PART_Track" IsDirectionReversed="true">
                            <Track.Thumb>
                                <Thumb Style="{StaticResource RoundThumbStyle}" />
                            </Track.Thumb>
                        </Track>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Height" Value="8"/>
                    <Setter Property="Width" Value="Auto"/>
                    <!-- Ensure the Thumb has appropriate width for horizontal scrollbar -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track Name="PART_Track" IsDirectionReversed="False" Orientation="Horizontal">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource RoundThumbStyle}" Width="Auto" Height="10"/>
                                    </Track.Thumb>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="Orientation" Value="Vertical">
                    <Setter Property="Width" Value="8"/>
                    <Setter Property="Height" Value="Auto"/>
                    <!-- Ensure the Thumb has appropriate height for vertical scrollbar -->
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ScrollBar}">
                                <Track Name="PART_Track" IsDirectionReversed="true" Orientation="Vertical">
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource RoundThumbStyle}" Width="10" Height="Auto"/>
                                    </Track.Thumb>
                                </Track>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="0,0,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="TabItemBorder" Background="{TemplateBinding Background}" BorderBrush="#333333" BorderThickness="1.5">
                                <Grid>
                                    <ContentPresenter x:Name="ContentSite"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="12,2,15,6"
                                      
                                      TextBlock.FontWeight="Normal"
                                      Opacity="1"/>
                                    <ContentPresenter x:Name="ContentSiteBold"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      ContentSource="Header"
                                      Margin="12,0,15,6"
                                      
                                      TextBlock.FontWeight="bold"
                                      Opacity="0"/>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ContentSite" Property="Opacity" Value="0"/>
                                <Setter TargetName="ContentSiteBold" Property="Opacity" Value="1"/>
                                <Setter Property="Foreground" Value="{Binding SelectedThemeColor, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"/>
                                <Setter TargetName="TabItemBorder" Property="BorderBrush" Value="#000000"/>
                                <Setter TargetName="TabItemBorder" Property="Background" Value="#292929"/>
                                <!-- Move text down and to the right -->
                                <Setter TargetName="ContentSiteBold" Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform X="2" Y="2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ContentSiteBold" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!-- Your existing setters for IsMouseOver -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToolTitleTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
