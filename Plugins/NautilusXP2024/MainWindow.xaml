                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <ToggleButton Name="DropDownToggle" Background="{TemplateBinding Background}" Width="60" Height="22">
                                                    <ToggleButton.Template>
                                                        <ControlTemplate TargetType="ToggleButton">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="50"/>
                                                                    <!-- Adjusted width here -->
                                                                    <ColumnDefinition Width="20"/>
                                                                </Grid.ColumnDefinitions>
                                                                <Border x:Name="ColorDisplay" Grid.Column="0" Background="{TemplateBinding Background}"
